<Window x:Class="ClientGui.View.GameNameSetter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGui.ViewModel"
        mc:Ignorable="d"
        Title="Settings Window" Height="375.37" Width="333.99">
    <Window.DataContext>
        <local:MutliplayerControlViewModel />
    </Window.DataContext>

    <Grid Background="Black">
        <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
            <Image x:Name="image" Height="100" Source="../Pictures/NameOfYourGame.png"/>
            <TextBox Height="40" TextWrapping="Wrap" Text="{Binding GameName}" VerticalAlignment="Center" FontSize="26.667" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="20" SpellCheck.IsEnabled="True"/>
            <Button x:Name="OKbutton" Content="OK" Margin="60,20,60,30" FontSize="26.667" Click="OKbutton_Click"/>
        </StackPanel>
    </Grid>
</Window>
