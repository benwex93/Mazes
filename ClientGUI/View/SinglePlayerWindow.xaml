<Window x:Class="ClientGui.View.SinglePlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGui.View"
        mc:Ignorable="d"
        Title="SinglePlayerWindow" Height="825" Width="550" Background="Black" HorizontalAlignment="Center" VerticalAlignment="Stretch">
    <StackPanel Background="Black" Name ="windowBackground" HorizontalAlignment="Center" Height="Auto" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="Auto">
        <StackPanel Orientation ="Horizontal" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="Auto">
            <Button x:Name="hint" Content="Hint!" Height="40" Margin="20" Width="80" HorizontalAlignment="Center"/>
            <Image x:Name="image" Height="100" Width="100" Source="../Pictures/CalFinal.png"/>
            <Button x:Name="back" Content="Go Back" Height="40" Margin="20" Width="80" HorizontalAlignment="Center"/>
        </StackPanel>
        <local:MazeControl />
    </StackPanel>
</Window>
