<Window x:Class="ClientGui.MultiplayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientGui"
        mc:Ignorable="d"
        Title="MultiplayerWindow" Height="300" Width="300">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="Auto" LastChildFill="False" VerticalAlignment="Top" Width="Auto">
            <StackPanel Name ="Player1" Height="Auto" VerticalAlignment="Top" Width="Auto"/>
            <StackPanel Height="Auto" VerticalAlignment="Center" Width="Auto"/>
            <StackPanel Name ="Player2" Height="Auto" VerticalAlignment="Top" Width="Auto"/>
        </DockPanel>
    </Grid>
</Window>
